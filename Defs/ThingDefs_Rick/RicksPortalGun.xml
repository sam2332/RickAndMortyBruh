        <li>Belt</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tradeTags>
      <li>Clothing</li>
      <li>TechHediff</li>
    </tradeTags>
    <comps>
      <li Class="RickAndMortyBruh.CompProperties_ApparelSpeedBoost">
        <moveSpeedMultiplier>1000000</moveSpeedMultiplier>
      </li>
