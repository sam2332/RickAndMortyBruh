<Defs>
  <!-- Portal Gun as Apparel - Speed Boost Version -->
  <ThingDef ParentName="ApparelBase">
    <defName>RickPortalGunApparel</defName>
    <label>portal gun (speed demon edition)</label>
    <description>A shitty version of Rick's portal gun that just makes you run really, REALLY fast. Like, stupidly fast. WUBBA LUBBA DUB DUB!</description>
    <graphicData>
      <texPath>Things/Item/Equipment/PortalGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>2.5</Mass>
      <MarketValue>1500</MarketValue>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>0</ArmorRating_Sharp>
